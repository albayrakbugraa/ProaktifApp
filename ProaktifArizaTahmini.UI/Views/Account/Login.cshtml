@using ProaktifArizaTahmini.BLL.Models.RequestModel;
<!-- Content Wrapper -->
@model LoginModel

@{
    ViewBag.Title = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proaktif Ariza Tahmini</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProaktifArizaTahmini.UI.styles.css" asp-append-version="true" />
    <meta name="theme-color" content="#7952b3">

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="text-center">
            <main class="form-signin">
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="header-title">
                        <img style="border-radius:8px;" src="~/img/logo.png" width="300px">
                    </div>
                    <div style="margin-top:30px;" class="header-title">
                        <small><strong>Lütfen Kullanıcı Bilgilerinizle Giriş Yapınız</strong></small>
                    </div>
                    <br />

                    <div class="form-floating">
                        <input asp-for="Username" class="form-control" id="floatingInput" autocomplete="off" placeholder="Domain Kullanıcı Adı">
                        <label asp-for="Username">Kullanıcı Adı</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control" autocomplete="off" id="floatingPassword" placeholder="Password">
                        <label asp-for="Password">Şifre</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" asp-for="RememberMe"> Beni Hatırla
                        </label>
                    </div>
                    @if (ViewData.ModelState["Error"]?.Errors.Count > 0)
                    {

                        <div class="alert alert-danger">
                            <span>@ViewData.ModelState["Error"]?.Errors[0].ErrorMessage </span>
                        </div>
                    }
                    <input type="submit" value="Giriş" class="w-100 btn btn-lg btn-primary" />
                    <p class="mt-5 mb-3 text-muted">© 2023 Proaktif Arıza</p>
                </form>
            </main>
        </div>
    </div>
</body>
</html>



