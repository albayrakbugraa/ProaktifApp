<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proaktif Ariza Tahmini</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProaktifArizaTahmini.UI.styles.css" asp-append-version="true" />

</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a asp-area="" asp-controller="RelayInformation" asp-action="List" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none @(ViewData["ActivePage"]?.ToString() == "RelayInformation" ? "activeClass" : "")" style="margin-top:20px;">
                        <span class="fs-5 d-none d-sm-inline">Proaktif Arıza Tahmini</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 text-xl align-items-center align-items-sm-start" id="myTab" role="tablist" style="margin-top:30px;">

                        <li class="nav-item" role="presentation">
                            <a asp-area="" asp-controller="RelayInformation" asp-action="List" class="nav-link align-middle px-0 @(ViewData["ActivePage"]?.ToString() == "RelayInformation" ? "activeClass" : "")" id="RelayInformation-tab" aria-selected="false" type="button">
                                <svg width="16" height="16" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                                    <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                                </svg><span class="ms-1 d-none d-sm-inline"> Röle Listesi</span>
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a asp-area="" asp-controller="Disturbance" asp-action="List" class="nav-link align-middle px-0 @(ViewData["ActivePage"]?.ToString() == "Disturbance" ? "activeClass" : "")" id="disturbance-tab" aria-selected="false" type="button">
                                <svg width="16" height="16" fill="currentColor" class="bi bi-file-earmark-spreadsheet" viewBox="0 0 16 16">
                                    <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V9H3V2a1 1 0 0 1 1-1h5.5v2zM3 12v-2h2v2H3zm0 1h2v2H4a1 1 0 0 1-1-1v-1zm3 2v-2h3v2H6zm4 0v-2h3v1a1 1 0 0 1-1 1h-2zm3-3h-3v-2h3v2zm-7 0v-2h3v2H6z" />
                                </svg> <span class="ms-1 d-none d-sm-inline">Arıza Kayıtları</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown pb-4">
                            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                @*<img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">*@
                                <span class="d-none d-sm-inline mx-1">@User.Claims.FirstOrDefault(x => x.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name").Value</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                                @*<li><a class="dropdown-item" href="#">New project...</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                            <hr class="dropdown-divider">
                            </li>*@
                                <li><a asp-action="Logout" asp-controller="Account" class="dropdown-item">Çıkış Yap</a></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
            <div class="col py-3">
                <div class="container-fluid" style="padding: 20px;">
                    <main role="main" class="pb-3" style="margin-top:30px;">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2023 - Proaktif Ariza Tahmini - <a asp-area="" asp-controller="" asp-action="">Hakkında</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
